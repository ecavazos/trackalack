!!!5
%html
  %head
    %title
      Trackalack

    = stylesheet_link_tag :all, :recursive => true
    = csrf_meta_tag

%body
  #header
    #header-box
      %h1
        = link_to 'Trackalack', :root

      %ul#header-links
        %li
          - if current_user
            = link_to current_user.fullname, edit_user_path(current_user)
        %li
          = link_to 'My Time', user_path(current_user)
        %li
          = link_to 'Sign Out', destroy_user_session_path

  #app-box
    #menu-bar
      .home-buttons
        = link_to 'Clients', clients_path
        = link_to 'Projects', projects_path
        = link_to 'Users', users_path

    #content
      = rails_msg(:alert)
      = rails_msg(:notice)
      = rails_msg(:error)
      = yield

  / = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js'
  / = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js'
  / = javascript_include_tag 'rails', 'application'
  = javascript_include_tag :defaults
  = yield :scripts
