!!!5
%html
  %head
    %title
      Trackalack

    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

%body
  #header
    .row
      %div{ :class => 'column grid_8'}
        %h1
          = link_to 'Trackalack', :root

      %div{ :class => 'column grid_4'}
        %ul#header-links
          %li
            - if current_user
              = link_to current_user.fullname, edit_user_path(current_user)
          %li
            = link_to 'My Time', user_path(current_user)
          %li
            = link_to 'Add User', new_user_path
          %li
            = link_to 'Sign Out', destroy_user_session_path

  #app-box
    = rails_msg(:alert)
    = rails_msg(:notice)
    = rails_msg(:error)
    = yield
