.row
  %div{ :class => 'column grid_12'}
    #search-box
      %form
        %input{ :type => 'text'}
        %input{ :type => 'submit', :value => 'Search'}

.row
  %div{ :class => 'column grid_12 home-buttons'}
    = link_to 'Add Client', new_client_path, :id => 'test'

    = link_to 'Clients', clients_path

    = link_to 'Projects', projects_path

.row
  %div{ :class => 'column grid_9'}
    %h2 Recent Activity

    - @time_entries.each do |x|
      .activity
        .activity-action
          = link_to 'Log time', new_project_time_entry_path(x.project)
        .activity-title
          Work logged for
          = link_to x.project.client.name, client_path(x.project.client)
          on the
          = link_to x.project.name, project_path(x.project)
          project.
        .activity-user
          done by
          = link_to x.user.fullname, edit_user_registration_path(x.user)
        .activity-meta
          .activity-meta-item
            = time_ago_in_words(x.created_at)
            ago
          - user_edit_time_link(x)

  %div{ :class => 'column grid_3'}
    %h2 Recently Updated

    %ul.quick-links
      - @recently_updated_projects.each do |project|
        %li
          =link_to project.name, project
          for
          =link_to project.client.name, project.client

    .quick-links-footer
      =link_to 'View all projects', projects_path

    %h2 New Clients

    %ul.quick-links
      - @clients.each do |client|
        %li= link_to client.name, client_path(client)

    .quick-links-footer
      =link_to 'View all clients', clients_path

    %h2 New Projects

    %ul.quick-links
      - @projects.each do |project|
        %li= link_to project.name, project_path(project)

    .quick-links-footer
      =link_to 'View all projects', projects_path

