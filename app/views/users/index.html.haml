.row
  %div{ :class => 'column grid_7'}
    %h2 Listing users

  %div{ :class => 'column grid_5'}
    #manage-nav
      = link_to 'New user', new_user_path

.row
  %div{ :class => 'column grid_12'}

    %table.data-table
      %tr
        %th Full name
        %th Email
        %th{ :colspan => 3 }

      - @users.each do |user|
        %tr
          %td= user.fullname
          %td= mail_to user.email
          %td.crud-action= link_to 'Show', user
          %td.crud-action= link_to 'Edit', edit_user_path(user)
          %td.crud-action= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

