.row
  %div{ :class => 'column grid_7'}
    %h2 Listing users

  %div{ :class => 'column grid_5'}
    #manage-nav
      = link_to 'New user', new_user_path

.row
  %div{ :class => 'column grid_12'}

    %table.data-table
      %tr
        %th Full name
        %th Email
        %th

      - @users.each do |user|
        %tr
          %td= user.fullname
          %td= mail_to user.email

          %td.crud-action
            %a.item-menu-button{:href => '', :data => { |
              :items => [ |
                {:name => 'Show', :path => user_path(user)}, |
                {:name => 'Edit', :path => edit_user_path(user)}, |
                {:name => 'Destroy', :path => user_path(user)} |
                ].to_json |
              } |
            } Menu |

- content_for :scripts do
  = javascript_include_tag 'item_menu'

