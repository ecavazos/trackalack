.row
  .column.grid_7
    %h2 New project

  .column.grid_5
    #manage-nav
      = link_to 'View client', client_path(@client)

.row
  .column.grid_12
    / = render 'form'

    = form_for [@client, @project] do |f|

      -if @project.errors.any?
        #error_explanation
          %h2
            = "#{ pluralize(@project.errors.count, "error") } prohibited this project from being saved:"

          %ul
            - @project.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :client
        = @client.name

      .field
        = f.label :name
        = f.text_field :name

      .actions
        = f.submit 'Save'

