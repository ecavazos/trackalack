#time-entry-form
  = form_for [@project, @time_entry], :remote => true do |f|

    .field
      %span.readonly
        = @project.client.name
      &mdash;
      %span.readonly
        = @project.name
    .col.clear
      = f.label :work_type
      = f.select :work_type, WorkTypes.for_select
    .col
      = f.label :billing_type
      = f.select :billing_type, BillingTypes.for_select
    .col.date
      = f.label :date
      = f.text_field :date
    .col.duration
      = f.label :duration
      = f.text_field :duration
      %span
        hrs
    .field
      = f.label :description
      = f.text_area :description, :rows => 4

    .actions
      = f.submit 'Save'
