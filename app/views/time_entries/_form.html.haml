= form_for [@project, @time_entry] do |f|

  -if @time_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@time_entry.errors.count, "error")} prohibited this time_entry from being saved:"
      %ul
        - @time_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :client
    = @project.client.name
  .field
    = f.label :project
    = @project.name
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit 'Save'
